@model InputModelLogin
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Inicio de Sesión del Sistema</h3>
                    </div>
                    <img src="~/images/images/logo.png" class="mx-auto w-50">
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="Index" method="post">
                            <div class="form-group">
                                <input asp-for="Email" placeholder="Email" class="form-control" autofocus />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" placeholder="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <span class="text-danger">
                                    @Html.DisplayFor(m => m.ErrorMessage);
                                </span>
                            </div>
                            <button class="btn btn-primary btn-block">
                                Ingresar
                            </button>
                        </form>
                        <div>
                            @Html.ActionLink("He olvidado la contraseña","StartRecovery")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}