@page
@model detailsUserModel
@{
    var image = "data:image/jpg;base64," + Convert.ToBase64String(Model.Input.DataUser.Image, 0, Model.Input.DataUser.Image.Length);
    var name = Model.Input.DataUser.Name + " " + Model.Input.DataUser.Apellido1 + " " + Model.Input.DataUser.Apellido2;
}

<div class="container">
    <h1>@name</h1>
    <div class="row">
        <div class="col-sm">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header">
                    <img class="imageUserDetail" src="@image" />
                </div>
                <div class="card text-center">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Name</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Role</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.Input.DataUser.IdentityUser.LockoutEnabled)
                                    {
                                        <p class="text-success">Disponible</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">No Disponible</p>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    Informacion
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    NID
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.NID</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@name</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Telefono
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.IdentityUser.PhoneNumber</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Correo Electronico
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Email</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Users" asp-route-id="1" asp-page="Register" method="post">
                                        @{
                                            var dataUser = JsonConvert.SerializeObject(Model.Input.DataUser);
                                        }
                                        <input type="hidden" name="DataUser" value="@dataUser" />
                                        <button type="submit" value="Editar" class="btn btn-success btn-sm">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-area="Users" asp-route-id="2" asp-page="DeleteUser" method="post">
                                        @{
                                            var dataUser2 = JsonConvert.SerializeObject(Model.Input.DataUser);
                                        }
                                        <input type="hidden" name="DataUser" value="@dataUser2" />
                                        <button type="submit" value="Borrar" class="btn btn-danger btn-sm" onclick="return confirm('Seguro de eliminar el usuario: @Model.Input.DataUser.Email ')">
                                            <i class="bi bi-trash3-fill"></i> Borrar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
