@page "/Productos/DeleteProducto"
@model FactuLib.Areas.Productos.Pages.Account.DeleteProductoModel

@{
    var image = "";
    if (Model.Input.Imagen != null)
    {
        image = "data:image/jpg;base64," + Convert.ToBase64String(Model.Input.Imagen, 0, Model.Input.Imagen.Length);
    }
    else
    {
        image = "/images/images/default.png";
    }

}
<div class="container p-4">
    <form method="post" enctype="multipart/form-data">
        <div class="row alert alert-warning" role="alert">
            <div class="col-sm-6 col-md-3">
                <img src="/images/images/atencion.png" style="width:100px; height:100px;" />
            </div>
            <div col-xs-6 col-md-5>
                <H2>ADVERTENCIA</H2>
                <P>Favor valide la información a borrar antes de proceder con el borrado.</P>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        <output id="imageUser">
                            <img src=@image class="imageUser" />
                        </output>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-5">
                <div class="panel panel-primary">
                    <h3 class="panel-title">Eliminar Producto</h3>
                </div>
                <div class="panel-body">
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <div id="header" class="bg-info">
                                    <h2 class="mb-0 t">
                                        <button class="btn btn-link text-light" type="button" data-toggle="collapse"
                                                data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Verificar Información
                                        </button>
                                    </h2>
                                </div>
                            </div>
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                 data-parent="#accordionExample">
                                <div class="card-body"> 
                                    <div class="form-group">
                                        <input asp-for="Input.Codigo_Producto" placeholder="Código de producto" class="form-control" readonly />
                                        <span asp-validation-for="Input.Codigo_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Nombre_Producto" placeholder="Nombre de producto" class="form-control" readonly />
                                        <span asp-validation-for="Input.Nombre_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Descripcion_Producto" placeholder="Descripción" class="form-control" readonly />
                                        <span asp-validation-for="Input.Descripcion_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Cantidad_Producto" placeholder="Cantidad de producto" class="form-control" readonly />
                                        <span asp-validation-for="Input.Cantidad_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Precio_Costo" placeholder="Precio costo" class="form-control" readonly />
                                        <span asp-validation-for="Input.Precio_Costo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Precio_Venta" placeholder="Precio venta" class="form-control" readonly />
                                        <span asp-validation-for="Input.Precio_Venta" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-block btn-danger" onclick="return confirm('He revisado la información y estoy de acuerdo en el producto a borrar ')">Eliminar</button>
                                    <div class="form-group">
                                        <label class="text-danger">@Html.DisplayFor(m => m.Input.ErrorMessage)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


