@page "/Productos/AgregarProducto"
@model FactuLib.Areas.Productos.Pages.Account.AgregarProductoModel
@{
    var image = "";
    if (Model.Input.Imagen != null)
    {
        image = "data:image/jpg;base64," + Convert.ToBase64String(Model.Input.Imagen, 0, Model.Input.Imagen.Length);
    }
    else
    {
        image = "/images/images/defaultCliente.png";
    }

}
<div class="container p-4">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="card text-center">
                    <div class="card-header">
                        <output id="imageProducto">
                            <img src=@image class="imageUser" />
                        </output>
                    </div>
                    <div class="card-body">
                        <div class="caption text-center">
                            <label class="btn btn-primary" for="files">Cargar Foto</label>
                            <input asp-for="Input.AvatarImage" accept="image/*" type="file" id="files" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-5">
                <div class="panel panel-primary">
                    @if (Model.Input.Id_Producto.Equals(0))
                    {
                        <h3 class="panel-title">Registrar Producto</h3>
                    }
                    else
                    {
                        <h3 class="panel-title">Actualizar Producto</h3>
                    }
                </div>
                <div class="panel-body">
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <div id="header" class="bg-info">
                                    <h2 class="mb-0 t">
                                        <button class="btn btn-link text-light" type="button" data-toggle="collapse"
                                                data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Ingresar Información
                                        </button>
                                    </h2>
                                </div>
                            </div>
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                 data-parent="#accordionExample">
                                <div class="card-body">
                                    <div class="form-group">
                                        @if (Model.Input.Codigo_Producto.Equals(0))
                                        {
                                            <div class="form-group">
                                                <input asp-for='Input.Codigo_Producto' placeholder='Codigo Producto' class='form-control' autofocus />
                                                <span asp-validation-for='Input.Codigo_Producto' class='text-danger'></span>
                                            </div>
                                        }                       
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Nombre_Producto" placeholder="Nombre de Producto" class="form-control" />
                                        <span asp-validation-for="Input.Nombre_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Descripcion_Producto" placeholder="Descripción de Producto" class="form-control" />
                                        <span asp-validation-for="Input.Descripcion_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Input.Cantidad_Producto" placeholder="Cantidad de Producto" class="form-control" />
                                        <span asp-validation-for="Input.Cantidad_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Precio Costo</span>    
                                            </div>
                                            <input asp-for="Input.Precio_Costo" class="form-control" type="text" id="currency-field" pattern="^\¢\d{1,3}(,\d{3})*(\.\d+)?$" value="" data-type="currency" placeholder="¢1,000,000.00">
                                        </div>       
                                        <span asp-validation-for="Input.Precio_Costo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Precio Venta</span>
                                            </div>
                                            <input asp-for="Input.Precio_Venta" class="form-control" type="text" id="currency-field" pattern="^\¢\d{1,3}(,\d{3})*(\.\d+)?$" value="" data-type="currency" placeholder="¢1,000,000.00">
                                        </div>
                                        <span asp-validation-for="Input.Precio_Venta" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Descuento</span>
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <input asp-for="Input.Descuento_Producto" placeholder="Descuento de Producto" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Input.Descuento_Producto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <select class="form-control" asp-for="Input.IdTipoProducto" asp-items="@Model.Input.TipoProductoItems">
                                            
                                        </select>
                                        <span asp-validation-for="Input.IdTipoProducto" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        @if (Model.Input.Codigo_Producto.Equals(0))
                                        {
                                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                                        }
                                    </div>
                                    <div class="form-group">
                                        <label class="text-danger">@Html.DisplayFor(m => m.Input.ErrorMessage)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
