@page "ReportsSearch"
@model FactuLib.Areas.Productos.Pages.Account.ReportsSearchModel
@{
}
<div class="container p-4">
    <div class="row">
        <h1 class="text-center">Busqueda de Reportes Inventario</h1>
    </div>
    <div class="row">
        <P>Seleccione una opción para exportar el reporte solicitado</P>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            @Html.DropDownList("Input.Opcion", new SelectList(Model.Input.opcion, "Text", "Text"), "Seleccione una Opcion",new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-group-lg">Generar Reporte</button>
        </div>
    </form>

</div>