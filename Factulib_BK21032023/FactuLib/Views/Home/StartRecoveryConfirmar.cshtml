@{
}
<div class="container p-4">
    <div class="row alert alert-info" role="alert">
            <div class="col-sm-6 col-md-3">
                <img src="/images/images/atencion.png" style="width:100px; height:100px;"/>
            </div>
            <div col-xs-6 col-md-5>
                <H2>Correo Enviado Satisfactoriamente</H2>
                <P>Abra el correo enviado y abra el hipervinculo que viene en el mismo para resetear la contraseña.</P>
            </div>
        </div>
    <div class="row text-center">
        <h1>Recuperacion de contraseña</h1>
    </div>
    <form action="@Url.Content("~/Home/StartRecovery")" method="post">
        <div class="row">
            <h5>Digite un correo electronico para enviar la recuperación de contraseña</h5>
        </div>
        <div class="row">
            @Html.TextBoxFor(d=>d.Email,null,new{@class = "form-control"})
        </div>
        <div class="row">
            @Html.ValidationMessageFor(d=>d.Email,null,new{style="color:red;"})
        </div>
        <br />
        <div class="text-right">
            <button class="btn btn-primary">Recuperar</button>
        </div>

    </form>
</div>
