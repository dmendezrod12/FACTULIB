@page "/Clientes/DetallesDeuda"
@model DetallesDeudaModel
@{
    var nombre = $"{Model.Input.DataClient.Name} {Model.Input.DataClient.Apellido1} {Model.Input.DataClient.Apellido2}";
    var deuda = $"{Model.Input.Moneda}{String.Format("{0:#,###,###,##0.00####}", Model.Input.DataClient.Deuda)}";
    var pago = $"{Model.Input.Moneda}{String.Format("{0:#,###,###,##0.00####}", Model.Input.DataClient.Pago)}";
    var deudaActual = $"{Model.Input.Moneda}{String.Format("{0:#,###,###,##0,##0.00####}", Model.Input.DataClient.DeudaActual)}";
    var mensual = $"{Model.Input.Moneda}{String.Format("{0:#,###,###,##0,##0.00####}", Model.Input.DataClient.Mensual)}";
    var id = Model.Input.DataClient.Cedula;
}
<div class="container">
    <h1>@nombre</h1>
    <div class="row">
        <div class="col-sm">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header">
                    <h5>Reporte de Pago</h5>
                </div>
                <div class="card-body">
                    <div class="col-md-10">
                        <div class="row">
                            <p>Deuda</p>
                            &nbsp;
                            <p>@deuda</p>
                        </div>
                        <div class="row">
                            <p>Fecha deuda: </p>
                            &nbsp;
                            <p>@Model.Input.DataClient.FechaDeuda.ToString("dd/MMM/yyy")</p>
                        </div>
                        <div class="row">
                            <p>Pago: </p>
                            &nbsp;
                            <p>@pago</p>
                        </div>
                        <div class="row">
                            <p>Fecha del pago: </p>
                            &nbsp;
                            <p>@Model.Input.DataClient.FechaPago.ToString("dd/MMM/yyy")</p>
                        </div>
                        <div class="row">
                            <p>Monto cuota por mes: </p>
                            &nbsp;
                            <p>@mensual</p>
                        </div>
                        <div class="row">
                            <p>Deuda Actual: </p>
                            &nbsp;
                            <p>@deudaActual</p>
                        </div>
                        <div class="row">
                            <p>Ticket: </p>
                            &nbsp;
                            <p>@Model.Input.DataClient.Ticket</p>
                        </div>
                        <div class="row">
                            <p>Usuario: </p>
                            &nbsp;
                            <p>@Model.Input.DataClient.User</p>
                        </div>
                        <div class="row">
                            <form asp-area="Clientes" asp-page="DetallesDeuda" method="post">
                                <input type="submit" value="Ticket" class="btn btn-outline-info btn-sm" />
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
